class Solution:
    def numberOfWays(self, n: int, x: int) -> int:
        MOD = 10**9 + 7
        powers = []
        num = 1
        while(p := num ** x) <= n:
            powers.append(p)
            num += 1
        dp = [0]*(n+1)
        dp[0] = 1
        for p in powers:
            for total in range(n,p-1,-1):
                dp[total] = (dp[total] + dp[total - p]) % MOD
        return dp[n]
