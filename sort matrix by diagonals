class Solution:
    def sortMatrix(self, grid: List[List[int]]) -> List[List[int]]:
        n = len(grid)
        ans = [[0]* n for _ in range(n)]
        diag = defaultdict(list)
        for i in range(n):
            for j in range(n):
                diag[i-j].append(grid[i][j])
        for key in diag:
            diag[key].sort(reverse=(key < 0))
        for i in range(n):
            for j in range(n):
                ans[i][j] = diag[i-j].pop()
        return ans
