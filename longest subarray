class Solution:
    def longestSubarray(self, nums: List[int]) -> int:
        left = max_len = zeroes = 0
        for right in range(len(nums)):
            if nums[right]  == 0:
                zeroes += 1
            while zeroes > 1:
                if nums[left] == 0:
                    zeroes -= 1
                left += 1
            max_len = max(max_len,right-left + 1)
        return max_len - 1
